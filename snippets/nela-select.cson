'.text.html.handlebars':
  'Nela Select':
    'prefix': 'NelaSelect'
    'leftLabel': 'Nela Select'
    'body': """
      <NelaSelect @selected={{${2:this.selected}}} @modelName="${1:model}" @endpoint="${3:endpoint}" as |option|>
        {{option}}
      </NelaSelect>
    """

  'Nela Select Multiple':
    'prefix': 'NelaSelectMultiple'
    'leftLabel': 'Nela Select'
    'body': """
      <NelaSelectMultiple @selected={{${2:this.selected}}} @modelName="${1:model}" @endpoint="${3:endpoint}" as |option|>
        {{option}}
      </NelaSelectMultiple>
    """
